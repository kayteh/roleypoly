      },
      {
        "displayName": "ui",
        "rootDir": "<rootDir>/ui",
        "setupFiles": [
          "<rootDir>/setupTests.js"
        ],
        "snapshotSerializers": [
          "enzyme-to-json/serializer"
        ],
        "testPathIgnorePatterns": [
          "/node_modules/",
          "/.next/"
        ]
      }
    ]
  }
